{
  "private": true,
  "homepage": "https://www.ing.de/lerna-webpack-template/",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^24.0.0",
    "@typescript-eslint/parser": "^1.3.0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.0",
    "core-js": "^3.4.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.16.0",
    "gh-pages": "^1.1.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "jest": "^24.0.0",
    "lerna": "^3.11.0",
    "prettier": "^1.16.4",
    "semistandard": "^14.2.0",
    "snazzy": "^8.0.0",
    "source-map-loader": "^0.2.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.0.0",
    "yarn": "^1.19.1"
  },
  "scripts": {
    "clean": "rm -rf packages/router/dist && rm -rf packages/router/node_modules",
    "clean:modules": "rm -rf node_modules && rm -rf packages/router/node_modules",
    "clean:full": "npm run clean && npm run clean:modules",
    "prebuild": "npm run clean",
    "bootstrap": "lerna bootstrap",
    "lint": "eslint --ext .jsx ./packages/*/src",
    "lint:semi": "semistandard -v | snazzy",
    "test": "jest",
    "build": "lerna run build:webpack",
    "dist": "npm run clean && npm run bootstrap && npm run build",
    "dev": "lerna run dev --stream",
    "deploy": "gh-pages -d packages/router/dist",
    "demo": "npm run clean:modules && npm install && npm run dist && npm run test && npm run dev"
  }
}
